/* pages/people/people.wxss */
page{
  display:flex;
  flex:1;
  flex-direction: column;
  height: 100%;
  background-color: #eee;
}
.title{
  width:100vw;
  text-align: center;
  height:5vh;
  line-height: 5vh;
  background-color: white;
  font-size:20px;
  font-weight: bold;
  color:rgba(250, 2, 2, 0.966);
}
.people{
  position:relative;
  width:100vw;
  height:auto;
  box-shadow: 0px 0px 2px 0px lightgray;
  margin-top:5px;
  background-color: white;

}
image{
  margin-top:6px;
  width:150rpx;
  height:150rpx;
  border-radius: 50%;
  display: inline-block;
}
.content{
  display: inline-block;
  align-items: center;
  justify-content: center;
  position:absolute;
  left:200rpx;
  top:8px;
}
.detail{
  position: absolute;
  right:10px;
  top:30px;
}
/* //内容样式 */
.serve{
  font-size: 20px;
}
.scoreborder{
  margin-top:2px;
  margin-bottom:2px;
  border:2px solid rgb(240, 226, 28);
  position: relative;
  width:58px;
}
.score{
  position: absolute;
  right:0;
  color:red;
  border-left:2px solid rgb(240, 226, 28);
  background-color: rgb(240, 226, 28);
}
.sort{
  width:60px;
  font-size:15px;
  border:2px solid rgb(95, 193, 226);
  border-radius: 30%;
  background-color: lightblue;
}