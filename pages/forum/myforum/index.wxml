<!--pages/forum/myforum/index.wxml-->
<view class="tab">
  <view class="tab-item {{tab==0 ? 'active':''}}" bindtap="changeItem" data-item="0">全部</view>
  <view class="tab-item {{tab==1 ? 'active':''}}" bindtap="changeItem" data-item="1">视频</view>
  <view class="tab-item {{tab==2 ? 'active':''}}" bindtap="changeItem" data-item="2">文章</view>
  <view class="tab-item {{tab==3 ? 'active':''}}" bindtap="changeItem" data-item="3">图片</view>
</view>
<!-- 搜索框 -->
<view class= "search-ss">
  <image src="http://q9xwl365p.bkt.clouddn.com/forum/index/ss.png"></image>
  <input class="input" name="search" placeholder="搜我发布的" bindinput="searchInput"/>
</view>
<view class="content">
<!--curren:当前滑块显示页面索引号； bindchange:滑块滑动时监听函数 -->
  <swiper current="{{item}}" bindchange="changeTab">
    <swiper-item>
      <view class = "content">
        <view class = "content-top">
          <image src="http://q9xwl365p.bkt.clouddn.com/forum/index/tx.jpg"></image>
          <view class="text">
            <text class="name">封印的橙子</text>
            <text class="time">昨天 9:00</text>
          </view>
          <view class="follow">
            <text>271阅读</text>
          </view>
        </view>
        <view class="content-content" bindtap="toDetails">
          <text>接单了 接单了</text>
          <image src="http://q9xwl365p.bkt.clouddn.com/forum/index/img.jpg"></image>
        </view>
        <view class="content-bottom">
          <image src="http://q9xwl365p.bkt.clouddn.com/forum/index/zf.png"></image>
          <text>70</text>
          <image src="http://q9xwl365p.bkt.clouddn.com/forum/index/pl.png"></image>
          <text>70</text>
          <image src="http://q9xwl365p.bkt.clouddn.com/forum/index/dz.png"></image>
          <text>70</text>
        </view>
      </view>
    </swiper-item>
    <swiper-item>
      <include src="discuss.wxml" />
    </swiper-item>
    <swiper-item>
      <include src="praise.wxml" />
    </swiper-item>
    <swiper-item>
      <include src="new.wxml" />
    </swiper-item>
  </swiper>
</view>
