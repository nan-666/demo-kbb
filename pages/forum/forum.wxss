/* pages/forum/forum.wxss */


/* 搜索栏 */
.container{
  padding: 0px;
  display: flex;
  width: 100vw;
  position: relative;
}

.search image{
  width: 60rpx;
  height: 60rpx;
  margin: auto;
}
.search-ss{
  display: flex;
  background: #eaebed;
  border-radius: 25px;
  width: 500rpx;
  margin: auto;
}
.search-ss image{
  width: 40rpx;
  height: 40rpx;
  align-items: center;
}
.search-fb{
  display: flex;
}
.search text{
  align-items: center;
  margin: auto;
}
.search{
  margin-top: 10rpx;
  float: left;
  display: flex;
  position: relative;
  width: 100%;
  flex-direction: row;
}
/* 版块栏 */
.block{
  /* overflow:hidden; */
  display: flex;
  flex-wrap: wrap;
  width: 100%;
}

.block-bk{
  flex: 20%;
  height: 135rpx;
  margin: 15rpx 20rpx;
  border: 0px solid #ffffff;
  border-radius: 40rpx;
  position: relative;
  float: left;
  padding: 12rpx 12rpx;
  background-image: url(http://q9xwl365p.bkt.clouddn.com/forum/index/ltbk.png); 
  background-size: 100% 100%;
  background-repeat:no-repeat;
}
.block-bk text{
  display: block;
  position: absolute;
  top: 20px;
}
/*内容栏*/
.tab{
  margin-top: 10rpx;
  position: relative;
  width: 100%;
  border-top: 8rpx solid #c7bebe;
  border-bottom: 4rpx solid #c7bebe;
}
.tab-item {
  flex: 1;
  font-size: 10pt;
  text-align: left;
  margin-left: 20rpx;
  line-height: 72rpx;
  border-bottom: 6rpx solid #eee;
  position: relative;
  float: left;
}
.content-top{
  display: flex;
  flex-direction: row;
  width: 100%;
  margin: 20rpx;
}
.content-top image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin: 5rpx;
}
.text{
  margin-left: 10rpx;
  display: flex;
  flex-direction: column;
  width: 450rpx;
  height: 80rpx;
  position: relative;

}
.time{
  font-size: 12px;
  position: relative;
  top: 14rpx;
}
.follow{
  display: flex;
  width: 160rpx;
  height: 65rpx;
  border: 1rpx solid #ff5733;
  background-color: #fff;
  color: #ff5733;
  border-radius: 40rpx;
  float: right;
  align-items: center;
  justify-content: center; 
}
.follow text{
  align-items: center;
  justify-content: center; 
}
.content-content{
  display: flex;
  flex-direction: column;
  position: relative;
}
.content-content text{
  margin: 20rpx;
  display: block;
  width: 600rpx;
  height: 150rpx;
  top: 150rpx;
  left: 60rpx;
  align-items: center;
  justify-content: center; 
}
.content-content image{
  margin: 20rpx;
  width: 200rpx;
  height: 200rpx;
}
.content-bottom {
  margin: 20rpx;
  display: flex;
  /*justify-content : flex-end;  解决浮动失效*/
  justify-content: flex-end;
  position: relative;
  width: 100%;
  float: right;
  border-bottom: 8rpx solid #c7bebe;
}
.content-bottom image{
  width: 40rpx;
  height: 40rpx;
  margin: 20rpx;
}
.content-bottom text{
  display: flex;
  justify-content: flex-end;
  font-size: 12px;
  align-items: center;
  justify-content: center;
}