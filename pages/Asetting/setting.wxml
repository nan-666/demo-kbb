<!--pages/Asetting/setting.wxml-->
<!-- 头像 -->
<form bindsubmit="submit">
  <view class='photo'>
    <image src="{{image}}"></image>
    <view class='tphoto' mode="aspectFill" bindtap="changeAvatar">更改头像</view>
  </view>
  <!-- 提交个人信息表单 -->
  <view class="page centerPage-wrap">
    <view class="centerPage-user-info">
      <view class="centerPage-info-item">
        <label>昵称：</label>
        <input class="input" value="{{username}}" placeholder="请输入您的昵称" />
      </view>
      <view class="centerPage-info-item">
        <label>性别：</label>
        <view class="radio">
          <radio-group name="gender">
            <label wx:for="{{gender}}" wx:key="index">
              <radio value="{{item.value}}" checked="{{item.checked}}" />
              {{item.sex}}
            </label>
          </radio-group>
        </view>
      </view>
      <view class="centerPage-info-item">
        <label>手机号：</label>
        <input class="input" type="number" value="{{cellphone}}" placeholder="请输入您的手机号" />
      </view>
      <view class="centerPage-info-item">
        <label>生日：</label>
        <picker mode="date" value="{{date}}" start="1900-09-01" end="2020-09-01" bindchange="bindDateChange">
          <view class="picker">{{date}}</view>
        </picker>
      </view>
      <view class="centerPage-info-item">
        <label>个人简介</label>
        <input class="input" type="text" value="{{intro}}" placeholder="请输入您的简介" />
      </view>
      <view class="centerPage-info-item">
        <label>标签：</label>
        <input class="input" type="text" value="{{label}}" placeholder="请输入您的标签" />
      </view>
      <view class="centerPage-info-item">
        <label>行业：</label>
        <input class="input" type="text" value="{{industry}}" placeholder="请输入您的行业" />
      </view>
    </view>
  </view>
  <!-- <view class="centerPage-save-btn" bindtap="saveUserInfo">保存</view> -->
  <button class="centerPage-save-btn" form-type="submit">提交</button>
</form>
