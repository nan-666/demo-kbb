<!--pages/Asetting/setting.wxml-->
<!-- 头像 -->
<view class='photo'>
  <image src="http://q9xwl365p.bkt.clouddn.com/forum/index/tx.jpg"></image>
  <view class='tphoto'>更改头像</view>
</view>
<!-- 提交个人信息表单 -->
<view class="page centerPage-wrap">
  <view class="centerPage-user-info">
    <view class="centerPage-info-item">
      <label>昵称</label>
      <input class="input" placeholder="请输入您的昵称" />
    </view>
    <view class="centerPage-info-item">
      <label>性别</label>
      <image class="select" src="http://q9xwl365p.bkt.clouddn.com/Asetting/img/arrows.png" />
      <picker mode="selector" class="centerPage-sex">
        <view class="picker"></view>
      </picker>
    </view>
    <view class="centerPage-info-item">
      <label>手机号</label>
      <input class="input" placeholder="请输入您的手机号" />
    </view>
    <view class="centerPage-info-item">
      <label>生日</label>
      <image class="select" src="http://q9xwl365p.bkt.clouddn.com/Asetting/img/arrows.png" />
      <picker mode="selector" class="centerPage-sex">
        <view class="picker"></view>
      </picker>
    </view>
    <view class="centerPage-info-item">
      <label>个人简介</label>
      <input class="input" placeholder="请输入您的简介" />
    </view>
    <view class="centerPage-info-item">
      <label>标签</label>
      <input class="input" placeholder="请输入您的标签" />
    </view>
    <view class="centerPage-info-item">
      <label>行业</label>
      <input class="input" placeholder="请输入您的行业" />
    </view>
  </view>
</view>
<view class="centerPage-save-btn" bindtap="saveUserInfo">保存</view>
