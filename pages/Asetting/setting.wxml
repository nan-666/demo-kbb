<!--pages/Asetting/setting.wxml-->
<!-- 头像 -->
<form bindsubmit="submit">
  <view class='photo'>
    <image src="{{infodata.avatarUrl}}"></image>
    <view class='tphoto' mode="aspectFill" bindtap="changeAvatar">更改头像</view>
  </view>
  <!-- 提交个人信息表单 -->
  <view class="page centerPage-wrap">
    <view class="centerPage-user-info">
      <view class="centerPage-info-item">
        <label>昵称：</label>
        <input class="input" value="{{infodata.nickname}}" placeholder="昵称" />
      </view>
      <view class="centerPage-info-item">
        <label>性别：</label>
            
  <radio-group name="sex">  
  <label>  
  <radio value="男" checked/>男</label>  
  <label>  
  <radio value="女" />女</label>  
  </radio-group>  
      </view>
      <view class="centerPage-info-item">
        <label>手机号：</label>
        <input class="input" type="number" value="{{infodata.phone}}" placeholder="手机号" />
      </view>
      <view class="centerPage-info-item">
        <label>生日：</label>
        <input class="input" type="date" value="{{infodata.birthday}}" placeholder="生日" />
      </view>
      <view class="centerPage-info-item">
        <label>个人简介:</label>
        <input class="input" type="text" value="{{infodata.tag}}" placeholder="个人简介" />
      </view>
      <view class="centerPage-info-item">
        <label>标签：</label>
        <input class="input" type="text" value="{{infodata.sort}}" placeholder="标签" />
      </view>
      <view class="centerPage-info-item">
        <label>行业：</label>
        <input class="input" type="text" value="{{infodata.industry}}" placeholder="行业" />
      </view>
    </view>
  </view>
  <!-- <view class="centerPage-save-btn" bindtap="saveUserInfo">保存</view> -->
  <button class="centerPage-save-btn" form-type="submit">提交</button>
</form>
