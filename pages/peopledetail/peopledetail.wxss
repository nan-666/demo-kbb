/* pages/peopledetail/peopledetail.wxss */
.content{
  display: flex;
  flex:1;
  flex-direction: column;
  text-align: center;
}
image{
  width:100%;
  height:33vh;
  border-radius: 10rpx;
  display: block;
  margin-bottom:3vh;
}
.main{
  margin: 50rpx;
  text-align: left;
  display: block;
  line-height: 5vh;
}
.main > view{
  margin-top: 20rpx;
}
.button{
  color: #fff;
  font-size: 11pt;
  display: flex;
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
}
.relation{
  width: 200rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  background: #66c0ff;
  margin-right: 20rpx;
  border-radius: 15rpx;
  text-align: center;
}
.receive{
  width: 200rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  background: #fe4a55;
  border-radius: 15rpx;
  text-align: center;
}