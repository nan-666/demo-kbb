/* pages/personal/worker/worker.wxss */
.container{
  display: flex;
  flex-direction: column;
  padding: 0px;
  margin: 0px auto;
  width: 100%;
}
.top{
  display: flex;
  flex-direction: row;
  float: right;
  width: 100%;
  margin: 30rpx;
  padding: 0rpx 30rpx;

}
.top > image{
  margin: 0rpx 30rpx;
  height: 140rpx;
  width: 140rpx;
  border: 0px solid #FFFF;
  border-radius: 70rpx;
}
.top-xx{
  display: flex;
  width: 320rpx;
  flex-direction: column;
  position: relative;
  /* align-items: center; */
  justify-content: center;
}
.top-xx > text{
  display: block;
}
.top-tab{
  display: flex;
  flex-direction: row;
}
.top-xx-tab{
  height: 40rpx;
  width: 90rpx;
  margin-top: 10rpx;
  border: 2rpx solid #808080;
  border-radius: 20rpx;
  color: #808080;
  font-size: 11px;
  align-items: center;
  justify-content: center;
  
}
.top-gz{
  display: flex;
  width: 160rpx;
  height: 80rpx;
  margin-top: 30rpx;
  margin-left: 20rpx;
  border-radius: 40rpx;
  background-color: #2a82e4;
  color: aliceblue;
  justify-content: flex-end;
  float: right;
  align-items: center;
  justify-content: center;

}
.top-gz text{
  font-size: 16px;
}

/* 动态信息栏 */
.information{
  display: flex;
  flex-direction: row;
  width: 100%;
  align-items: center;
  justify-content: center;
  margin: 30rpx;
  height: 150rpx;
  border-bottom: 3rpx solid #808080;
}
.information > view{
  flex: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.information >view text:first-child{
  color: #808080;
}

/* 动态内容栏 */
.content-top{
  display: flex;
  flex-direction: row;
  width: 100%;
  margin: 20rpx;
}
.content-top image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin: 5rpx;
}
.text{
  margin-left: 10rpx;
  display: flex;
  flex-direction: column;
  width: 450rpx;
  height: 80rpx;
  position: relative;

}
.time{
  font-size: 12px;
  position: relative;
  top: 14rpx;
}
.content-content{
  margin: 30rpx;
  width: 100%;
}
.content-content > text{
  display: flex;
  margin-bottom: 30rpx;
}
.content-content view{
  width: 90%;
  height: 150rpx;
  border-radius: 5rpx;
  display: flex;
  align-items: center;
  justify-content: center;

}
.content-content >view >image{
  height: 150rpx;
  width: 150rpx;
}
.content-content >view >view{
  display: flex;
  flex-direction: column;
  height: 150rpx;
  width: 500rpx;
  background-color: #e2e2e2;
}
.content-content >view >view >text:last-child{
  font-size: 12px;
}

.content-bottom {
  margin: 20rpx;
  display: flex;
  /*justify-content : flex-end;  解决浮动失效*/
  justify-content: flex-end;
  position: relative;
  width: 100%;
  float: right;
}
.content-bottom image{
  width: 40rpx;
  height: 40rpx;
  margin: 20rpx;
}
.content-bottom text{
  display: flex;
  justify-content: flex-end;
  font-size: 12px;
  align-items: center;
  justify-content: center;
}
/* 华丽的分割线 */
.line{
  width: 100%;
  border-bottom: 3rpx solid #808080;
}