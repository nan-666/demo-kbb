page{
  display: flex;
  flex-direction: column;
  background: #ffffff;
  color: #050505;
  height: 100%;
}
.total{
  height: 100%;
  width: 100%;
  background-color: #f9f9f9;
}

/* 银行卡部分样式 */

.card{
  height: 150rpx;
  width: 100%;
  margin-top: 20rpx;
  background-color: white;
}
.card-image image{
  height: 100rpx;
  width: 100rpx;
  border-radius: 50rpx;
  margin-top: 25rpx;
  margin-left: 50rpx;
}
.card-title-1{
  margin-left: 200rpx;
  margin-top: -100rpx;
  font-size: 10pt;
}
.card-title-2{
  margin-left: 200rpx;
  font-size: 8pt;
  color: #ccc;
}
.card-icon{
  margin-left: 650rpx;
  margin-top: -65rpx;
}
.card-icon image{
  height: 80rpx;
  width: 80rpx;
}

/* 提现金额部分样式 */
.money{
  height: 300rpx;
  width: 100%;
  margin-top: 35rpx;
  background-color: white;
}
.money-title{
  width: 520rpx;
  margin-left: 50rpx;
  font-size: 10pt;
  color: #ccc;
}
.money-icon{
  width: 650rpx;
  font-size: 20pt;
  margin-top: 100rpx;
  margin-left: 50rpx;
  border-bottom: 1px solid #ccc;
}
.money-icon input{
  height: 100rpx;
  margin-top: -90rpx;
  margin-left: 100rpx;
}
.money-coin{
  width: 520rpx;
  margin-left: 50rpx;
  margin-top: 10rpx;
  font-size: 10pt;
  color: #ccc;
}
.total button{
  margin-top: 50rpx;
  font-size: 8pt;
  background-color: #FF8D1A;
  color: white;
}