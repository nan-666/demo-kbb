/* pages/personal/property/balance/balance.wxss */
page{
  display: flex;
  flex-direction: column;
  background: #ffffff;
  color: #050505;
  height: 100%;
}
.all{
  width: 100%;
  height: 100%;
  background-color: #f7f7f7;
}

/* 余额显示部分样式 */
.balance-top{
  height: 350rpx;
  width: 100%;
  background-color: #FF944E;
  color: #fff;
}
.balance-text{
  margin-left: 50rpx;
  font-size: 12px;
}
.balance-num{
  margin-top: 75rpx;
  margin-left: 50rpx;
  font-size: 35px;
}

/* 具体操作样式 */
.balance-content{
  width: 100%;
  height: 300rpx;
}
.balance-detail{
  height: 140rpx;
  width: 100%;
  background-color: #fff;
}
.balance-word{
  height: 85rpx;
  width: 100%;
  margin-top: -80rpx;
  margin-left: 150rpx;
  font-size: 16px;
  border-bottom: 1px solid #ccc;
}
.icon-left{
  margin-left: 25rpx;
}
.icon-left image{
  height: 100rpx;
  width: 100rpx;
  margin-top: 20rpx;
}
.icon-right{
  margin-top: -25px;
  margin-left: 520rpx;
}
.icon-right image{
  height: 75rpx;
  width: 75rpx;
}