/* 订单框 */
/*订单列表*/
.orderDetails {
  background: #fff;
  margin:20rpx;
  border-bottom: 20rpx solid #f5f5f5;
  }
   
  .orderListTitle {
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1rpx solid #BEBEBE;
  }
   
  .orderListTitle .userName {
  padding-right: 50rpx;
  margin-left:10px;
  }
   
  .orderListTitle .orderStatus {
  float: right;
  margin-right: 20rpx;
  color: #2f7b27;
  font-size: 34rpx;
  }
   
  .orderListDetails {
  display: flex;
  height: 200rpx;
  border-bottom: 1rpx solid #f3f3f3;
  }
   
  .orderListDetails .productImg {
  flex: 1;
  height:180rpx;
  width:120rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
  }
   
  .orderListDetails .productImg image {
  width: 100px;
  height: 90%;
  }
   
  .orderListDetails .productInfo {
  flex: 4;
  margin: 40rpx 10px 20px 30rpx;
  font-size:15px;
   
  }
   
  .orderListDetails .productInfo .productTitle {
  font-size:15px;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom:10px;
  }
   
  .productCount {
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid #f3f3f3;
  }
   
  .productCount>view {
  float: right;
  margin-right: 30rpx;
  }