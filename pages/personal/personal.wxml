<!--pages/personal/personal.wxml-->
<scroll-view class="content" scroll-y>
	<!-- 头像、账号设置、身份切换及登录/注册部分 -->
	<view class="content-info">
		<image class="content-info-head" src="http://q9xwl365p.bkt.clouddn.com/forum/index/tx.jpg" bindtap="btnclick"/>
		<view class="content-info-set" bindtap="toSetting">
			<image src="http://q9xwl365p.bkt.clouddn.com/personal/personal/sz.png" />
			<view>账号设置</view>
		</view>
		<view class="content-info-operate">
			<view>登录</view>
			<view> | </view>
			<view>注册</view>
		</view>
		<view class="content-info-change">
			<view>登录后可切换为服务商身份</view>
			<image src="http://q9xwl365p.bkt.clouddn.com/personal/personal/qj.png" />
		</view>
		<view class="content-info-collect">
			<view>
				<view>-</view>
				<text>我的收藏</text>
			</view>
			<view>
				<view>-</view>
				<text>我的关注</text>
			</view>
			<view>
				<view>-</view>
				<text>足迹</text>
			</view>
		</view>
	</view>

	<!-- 订单部分 -->
	<view class="content-order">
		<view class="content-order-item">
			<image src="http://q9xwl365p.bkt.clouddn.com/personal/personal/dfk.png" />
			<text>待付款</text>
		</view>
		<view class="content-order-item">
			<image src="http://q9xwl365p.bkt.clouddn.com/personal/personal/dfw.png" />
			<text>待服务</text>
		</view>
		<view class="content-order-item">
			<image src="http://q9xwl365p.bkt.clouddn.com/personal/personal/dpj.png" />
			<text>待评价</text>
		</view>
		<view class="content-order-item" bindtap="toAftersale">
			<image src="http://q9xwl365p.bkt.clouddn.com/personal/personal/fwh.png" />
			<text>服务后</text>
		</view>
		<view class="content-order-item">
			<image src="http://q9xwl365p.bkt.clouddn.com/personal/personal/qbdd.png" />
			<text>全部订单</text>
		</view>
	</view>

	<!-- 我的资产部分 -->
	<view class="content-property">
		<view class="content-property-title">我的资产</view>
		<view class="content-property-item">
			<view bindtap="toBalance">
				<view>-</view>
				<text>账户余额</text>
			</view>
			<view>
				<view>-</view>
				<text>卡券</text>
			</view>
		</view>
	</view>

	<!-- 常用服务部分 -->
	<view class="content-serve">
		<view class="content-serve-title">常用服务</view>
		<view class="content-serve-item">
			<view>登录查看您常用的服务</view>
		</view>
	</view>
</scroll-view>