/* pages/index/search/result/result.wxss */
.searchresultList-container {
  display: flex;
  flex-direction: column;
  height: 100%;
  width: 100%;
}

.search-bg1 {
  height: 55px;
  position: relative;
  top: 0px;
  z-index: 1;
  background-color: #f5f5f9;
}

.search-box {
  height: 33px;
  position: absolute;
  width: 94%;
  z-index: 2;
  top: 10px;
  margin: 0 3% 0 3%;
  background-color: white;
  display: -webkit-flex;
  display: flex;
  font-size: 13px;
  border-radius: 3px;
}

.search-icon {
  display: flex;
  width: 100%;
  flex: 1;
  align-items: center;
  justify-content: center;
}

.input {
  width: 100%;  
  text-align: center;
}

.content-sales {
  display: flex;
  height: 100%;
  margin-top: 20rpx;
}
.content-sales-item {
  height: 17vh;
  display: flex;
  align-items: center;
  border-bottom: 2px solid #eee;
}
.content-sales-item-img {
  height: 15vh;
  width: 25vw;
  margin-left: 20rpx;
}
.content-sales-info {
  flex: 1;
  line-height: 38rpx;
  margin-left: 20rpx;
  padding-bottom: 8rpx;
}
.content-sales-appraise {
  display: flex;
}
.content-sales-appraise > view {
  margin-right: 15rpx;
}
.content-sales-appraise > image {
  flex-direction: column;
  height: 30rpx;
  width: 30rpx;
  margin: auto 0;
}