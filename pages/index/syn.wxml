<view class="syn" bindtap="toDetails" wx:for='{{datalist}}' wx:key='taskid'>
  
  <scroll-view class="container-body" scroll-y="true" scroll-top="{{scrolltop}}" bindscroll="scrollHandle" lower-threshold="50" bindscrolltolower="scrollLoading">
		<view class="service-list">
			<navigator class="service-item" wx:for="{{datalist}}" wx:key="{{item.id}}" url="/pages/index/task-detail/detail?id={{item.id}}">
				<image src="{{item.icon}}" class="fimg"/>
				<view class="service-text">
					<view class="service-tite">{{item.title}}</view>
					<view class="service-tags">
						<text>{{item.type}}</text>
					</view>
					<text class="service-city">服务城市：{{item.address}}</text>
				</view>
				<view class="syn-money">
    			<view>￥<text class="money">{{item.money}}</text></view>
    			<image src="http://q9xwl365p.bkt.clouddn.com/task/syn/look.png" class="simg"/>
  			</view>
			</navigator>
		</view>
		<view class="gototop {{scrolltop>200?'active':''}}" bindtap="goToTop"></view>
	</scroll-view>
</view>