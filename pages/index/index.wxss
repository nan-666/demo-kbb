/**index.wxss**/
page{
  display: flex;
  flex-direction: column;
  color: #000;
  height: 100%;
}
.tab{
  display: flex;
}
.tab-item{
  flex: 1;
  font-size: 10pt;
  text-align: center;
  line-height: 72rpx;
  border-bottom: 6rpx solid #eee;
}
.active{
  color: #ff5733;
  border-bottom-color: #ff5733;
}
.content{
  flex: 1;
}
.content > swiper{
  height: 100%;
}
/* 服务页面样式 */
.content-server{
  height: 100%;
}
/* 设置滚动条样式 */
::webkit-scrollbar{   
  width: 0;
  height: 0;
  color: transparent;
}
.server-search{
  display: flex;
  align-items: center;
  height: 100rpx;
}
.server-search-site{
  flex: 1;
  font-size: 8pt;
  line-height: 35rpx;
  margin-left: 20rpx;
  padding-bottom: 8rpx;
  color: #ff5733;
}
.server-search-site > image{
  display: block;
  width: 30rpx;
  height: 45rpx;
  margin-left: 25rpx;
}
.server-search-site > view{
  width: 80rpx;
}
.server-search-box{
  position: relative;
  right: 20rpx;
  width: 80vw;
  box-sizing: border-box;
  z-index: 1;
}
.weui-icon-search_in-box{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  left: 4px;
  top: 4px;
}
.server-search-box input{
  height: 28px;
  line-height: 28px;
  font-size: 14px;
  background: #eaebed;
  border-radius: 20rpx;
}
.placeholderinput{
  position: absolute;
  left: 25px;
}


.content-server-slide{
  height: 302rpx;
  margin-bottom: 20rpx;
}
.content-server-slide image{
  width: 100%;
  height: 100%;
}
/* 服务页面功能按钮区样式 */
.content-server-portal{
  display: flex;
  flex-wrap: wrap;
  padding-bottom: 15rpx;
  margin-bottom: 15rpx;
  border-bottom: 5rpx solid #bebdbd;
}
.content-server-portal > view{
  flex: 1;
  font-size: 11pt;
  text-align: center;
}
.content-server-portal image{
  width: 14vw;
  height: 11vh;
  margin: 20rpx 40rpx;
  display: block;
}
/* 推荐区样式 */
.list-title {
  margin: 20rpx 35rpx;
}
.content-activity{
  display: flex;
  flex-wrap: wrap;
}
.content-activity > view{
  flex: 30%;
  margin: 10rpx 20rpx;
}
